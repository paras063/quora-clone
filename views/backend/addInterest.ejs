<%- include('./includes/head.ejs')%>
    <link rel="stylesheet" href="/frontend/css/admin.css">
    </head>

    <body>
        <%- include('./includes/navigation.ejs')%>
            <main>
                <div class="mt-3">
                    <%if(errorMsg){%>
                        <div class="text-center">
                            <div class="alert alert-danger mb-3 ">
                                <%=errorMsg%>
                            </div>
                        </div>
                        <%}%>
                            <div class="text-center">
                                <div class="add-interest">
                                    <form class="container" id="add-interest" action="/admin/add-category"
                                        method="POST">
                                        <div class="form-group">
                                            <input class="interest" name="tag" id="tag" placeholder="Enter Category">
                                        </div>
                                        <input type="hidden" name="_csrf" id="_csrf" value="<%= csrfToken %>">
                                        <br>
                                        <br>
                                        <button class="btn btn-dark" type="submit">Add Category
                                            <i class="fas fa-plus-circle"></i></button>
                                    </form>
                                </div>
                            </div>
                            <br>
                            <div class="d-grid">
                                <%interest.forEach(i=>{%>
                                    <a href="<%=i._id%>" class="btn btn-primary">
                                        <%=i.category.toUpperCase()%>
                                    </a>                                   
                                    <%})%>

                            </div>

                </div>
            </main>



    </body>

    </html>