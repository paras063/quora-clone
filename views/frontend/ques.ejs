<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/frontend/css/addQues.css">
    <link rel="stylesheet" href="/frontend/css/multitag.css">

    </head>

    <body class="bg-gradient">
            <main class="mt-3">
                <div class="text-center">
                    <img class="text-center mb-3 " src="/frontend/img/quesavtar.png" height="400" width="250">
                    <div class="alert alert-danger mb-3 hide">Lorem ipsum dolor sit amet.</div>
                    <div class="alert alert-success hide">Lorem ipsum dolor sit amet.</div>

                </div>
                <section id="add-question">
                    <section class="bg-light shadow-lg">
                        <h3 class="text-center heading">Add Your Question Here</h3>
                        <form class="container" id="add-question">
                            <div class="form-group">
                                <label for="quesTitle">Title</label>
                                <input type="text" name="quesTitle" id="quesTitle" />
                                <small class="text-danger hide">Please Enter Question Title</small>
                            </div>
                            <div class="form-group">
                                <label for="quesBody">Body</label>
                                <Textarea rows="10" cols="5" name="quesBody" id="quesBody"></Textarea>
                                <small class="text-danger hide">Please Enter Question Body</small>
                            </div>
                            <div class="select-item-list--single form-group">
                                <label for="quesTags" class="mb-2">Tags</label>
                                <div class="directorist-select directorist-select-multi" id="multiSelect"
                                    data-isSearch="true" data-max="4" data-multiSelect="['<%= subInterestArr %>']">
                                    <input type="hidden" name="quesTags" id="quesTags">
                                </div>
                            </div>
                            <input type="hidden" name="_csrf" id="_csrf" value="<%= csrfToken %>">
                            <br>
                            <div class="text-center">
                                <button class="btn-lg btn-primary" type="submit">Add Question
                                    <i class="fas fa-sign-in-alt"></i></button>
                            </div>
                        </form>

                    </section>
                </section>
            </main>
            <h1 class="text-center text-light">LOGO</h1>
            <script src="/frontend/js/multitag.js"></script>
            <script src="/frontend/js/addQues.js"></script>
    </body>

    </html>